<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout
      android:id="@+id/comment_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/comment_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/comment_author"/>

    <TextView
        android:id="@+id/comment_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/comment_text"/>

    <ProgressBar
        android:id="@+id/load_comments_progress"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/comment_padding_top"
        android:paddingBottom="@dimen/comment_padding_bottom"
        android:paddingStart="@dimen/comment_padding_start"
        android:paddingEnd="@dimen/comment_padding_end"
        android:visibility="visible"
        android:gravity="center"/>

  </LinearLayout>

  </LinearLayout>

